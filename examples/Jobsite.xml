<testcases repeat="1">

<case
    section="Locators for Testers Example - Jobsite"
    id="100"
    description1="Fill out Jobsite search form"
    method="selenium"
    command1='$driver->get("http://www.jobsite.co.uk")'
    command2="_keys_to_element_before('Job title or skill','Automated Testing')"
    command3="_keys_to_element_before('Location','London')"
    command4="_keys_to_element_before('Distance','15 miles','SELECT')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Automated Testing"
/>

<case
    varSPOTLIGHT_PRESENT=""
    id="110"
    description1="Click Search"
    method="selenium"
    command1="_click('Search')"
    command2="_wait_for_text_visible('Automated Testing jobs')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Found sought text"
    pareseresponseSPOTLIGHT_PRESENT="(spotlight_dismiss)|regex|"
/>

<case
    id="120"
    description1="Dismiss 'Get new jobs' spotlight - [{SPOTLIGHT_PRESENT}]"
    method="selenium"
    command1="_click('spotlight_dismiss')"
    verifytext="get_current_url,get_body_text"
    runif="{SPOTLIGHT_PRESENT}"
/>

<case
    id="130"
    description1="Sort jobs by date"
    method="selenium"
    command1="_keys_to_element_after('sortby', ' Date', 'SELECT')"
    verifytext="get_current_url,get_body_text"
/>

<case
    id="140"
    description1="Click 'Refine Search'"
    method="selenium"
    command1="_click('Refine Search')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Advanced Search"
/>

<case
    id="150"
    description1="Enter 'Test Manager' into 'Job Title'"
    method="selenium"
    command1="_keys_to_element_after('Job Title', 'Test Manager')"
    verifytext="get_current_url,get_body_text"
/>

</testcases>