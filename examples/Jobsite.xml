<testcases repeat="1">

<case
    section="Locators for Testers Example - Jobsite"
    id="100"
    description1="Fill out Jobsite search form"
    method="selenium"
    command1='$driver->get("http://www.jobsite.co.uk")'
    command2="_keys_to_element_before('Job title or skill','Automated Testing')"
    command3="_keys_to_element_before('Location','London')"
    command4="_keys_to_element_before('Distance','15 miles','SELECT')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Automated Testing"
/>

<case
    id="110"
    description1="Click Search"
    method="selenium"
    command1="_click('Search')"
    command2="_wait_for_text_visible('Automated Testing jobs')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Found sought text"
/>

<case
    id="120"
    description1="Dismiss 'Get new jobs' spotlight"
    method="selenium"
    command1="_click('Close Modal')"
    verifytext="get_current_url,get_body_text"
/>

<case
    id="130"
    description1="Click Relevance to open drop down"
    method="selenium"
    command1="_click('Relevance')"
    verifytext="get_current_url,get_body_text"
/>

<case
    id="140"
    description1="Click Date to sort by Date"
    method="selenium"
    command1="_click('Date')"
    verifytext="get_current_url,get_body_text"
/>

<case
    id="150"
    description1="Enter 'London' into 'Where'"
    method="selenium"
    command1="_keys_to_element_after('Where', 'London')"
    verifytext="get_current_url,get_body_text"
/>

<case
    id="160"
    description1="Click 'Search'"
    method="selenium"
    command1="_click('Update|||2')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Automated Testing jobs in London"
/>

</testcases>