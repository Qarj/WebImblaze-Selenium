<testcases repeat="1">

<case
    section="Locators for Testers Example - trainline"
    id="100"
    description1="Fill out search form"
    method="selenium"
    command1='$driver->get("https://www.thetrainline.com")'
    command2="_keys_to_element('Enter origin station','London Waterloo')"
    command3="_keys_to_element('Enter destination','Havant')"
    command4="_click('Return')"
    command5="_click('Tomorrow')"
    command6="_keys_to_element_after('outHour','09','SELECT')"
    command7="_keys_to_element_after('outMinute','00','SELECT')"
    command8="_click('Same day')"
    command9="_keys_to_element_after('returnHour','15','SELECT')"
    command10="_keys_to_element_after('returnMinute','30','SELECT')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Open Return"
/>

<case
    id="110"
    description1="Submit search"
    method="selenium"
    command1='_click("Get times & tickets")'
    command2='_wait_visible("Anytime Day Return")'
    verifytext="get_current_url,get_body_text"
    verifypositive="Off-Peak Day Return"
/>

</testcases>