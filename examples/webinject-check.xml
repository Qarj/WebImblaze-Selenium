<testcases repeat="1">

<case
    section="Locators for Testers Example - webinject-check"
    id="100"
    description1="Get webinject-check home page"
    method="selenium"
    command1='$driver->get("http://webinject-check.azurewebsites.net/")'
    verifytext="get_current_url,get_body_text"
    verifypositive="site to aid in the self test of webinject"
    checkpoint="true"
/>

<case
    id="110"
    description1="Click Special menu item"
    method="selenium"
    command1='_click("Special")'
    verifytext="get_current_url,get_body_text"
    verifypositive="See API info"
/>

<case
    id="120"
    description1="Click Search the recipes"
    method="selenium"
    command1="_click('Search the recipes')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Max Preparation Time"
/>

<case
    id="130"
    description1="Fill out search form"
    method="selenium"
    command1="_keys_to_element_after('Recipe Name:','Pie')"
    command2="_keys_to_element_after('Cuisine:','British')"
    command3="_keys_to_element_after('Max Prep','15')"
    verifytext="get_current_url,get_body_text"
    verifypositive="British"
/>

<case
    id="140"
    description1="Submit form"
    method="selenium"
    command1="_click('Search Recipes')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Well done"
/>

<case
    section="Locators for Testers Example - webinject-check - Create, Read, Update, Delete"
    id="200"
    description1="Get webinject-check home page then click CRUD"
    method="selenium"
    command1='$driver->get("http://webinject-check.azurewebsites.net/")'
    command2='_click("CRUD")'
    verifytext="get_current_url,get_body_text"
    verifypositive="Create New"
/>

<case
    id="210"
    description1="Click Create New"
    method="selenium"
    command1='_click("Create New")'
    verifytext="get_current_url,get_body_text"
    verifypositive="Delay Seconds"
/>

<case
    id="220"
    description1="Fill out new recipe record details"
    method="selenium"
    command1='_keys_to_element_after("Name","Meat Pie")'
    command2='_keys_to_element_after("Cuisine","British")'
    command3='_keys_to_element_after("Serves","5")'
    command4='_keys_to_element_after("Delay Seconds","0")'
    verifytext="get_current_url,get_body_text"
    verifypositive="Meat Pie"
/>

<case
    id="230"
    description1="Click Create"
    method="selenium"
    command1='_click("Create|||2")'
    verifytext="get_current_url,get_body_text"
    verifypositive1="Meat Pie"
    verifypositive2="Details"
/>

<case
    id="240"
    description1="Click Details"
    method="selenium"
    command1='_click("Details")'
    verifytext="get_current_url,get_body_text"
    verifypositive1="Meat Pie"
    verifypositive2="Back to List"
/>

</testcases>