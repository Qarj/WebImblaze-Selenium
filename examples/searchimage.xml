<testcases repeat="1">

<case
    varPROJECT="./../WebInject-Selenium/"
    section="Mobile"
    id="100"
    description1="Get WEBINJECT-CHECK Home page"
    description2="mobile phone pixel width - 320 wide"
    method="selenium"
    command1="$driver->set_window_size(960, 320)"
    command2="$driver->get('http://{WIC}')"
    verifytext="get_page_source"
    verifypositive="WebInject is a powerful free automated test tool"
    searchimage1="{PROJECT}examples\search_images\menu_hamburger.png"
    searchimage2="{PROJECT}examples\search_images\Learn_more.png"
    retry="3"
    restartbrowseronfail="true"
/>

<case
    section="Desktop"
    id="200"
