<testcases repeat="1">

<case
    section="Locators for Testers Example - National Rail"
    id="100"
    description1="Fill out search form"
    method="selenium"
    command1='$driver->get("http://www.nationalrail.co.uk")'
    command2="_keys_to_element_after('From','London Waterloo')"
    command3="_keys_to_element_after('to','Havant')"
    command4="_click('Show Calendar')"
    command5="_wait_visible('sprite-main next')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Train times"
/>

<case
    id="110"
    description1="Fill out search form - part 2"
    method="selenium"
    command1='_click("Tomorrow")'
    command5="_keys_to_element_after('at','09','SELECT')"
    command6="_keys_to_element_after('at','00','SELECT|||2')"
    command7="_click_before('Return')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Train times"
/>

<case
    id="120"
    description1="Fill out search form - part 3"
    method="selenium"
    command1='_click("Tomorrow|||2")'
    command9="_keys_to_element_after('at|||2','15','SELECT')"
    command10="_keys_to_element_after('at|||2','00','SELECT|||2')"
    verifytext="get_current_url,get_body_text"
    verifypositive="Train times"
/>

<case
    id="130"
    description1="Click Go"
    method="selenium"
    command1='_click("Go")'
    command2='_wait_visible("Earlier trains")'
    verifytext="get_current_url,get_body_text"
    verifypositive="Later trains"
/>

</testcases>