<testcases repeat="1">

<case
    section="helper_move_to"
    id="10"
    description1="Get Totaljobs Home Page"
    method="selenium"
    command='$selresp = $driver->get("https://www.totaljobs.com");'
    command1="$selresp = helper_get_element('Copyright and database rights');"
    verifytext="get_current_url,get_body_text"
    verifypositive="Companies hiring"
    retry="3"
/>

<case
    id="20"
    description1="Check that Register CV is in viewport (top right)"
    method="selenium"
    command1="$selresp = helper_get_element('Register CV');"
    verifytext="get_current_url"
    verifypositive1="inViewport\[1]"
/>

<case
    id="30"
    description1="Check that StepStone Deutschland is not in viewport (very bottom of page left)"
    method="selenium"
    command1="$selresp = helper_get_element('StepStone Deutschland');"
    verifytext="get_current_url"
    verifypositive1="inViewport\[0]"
/>

<case
    id="40"
    description1="Move mouse to Copyright message"
    method="selenium"
    command1="$selresp = helper_move_to('Copyright and database rights');"
    verifytext="get_current_url"
/>

<case
    id="50"
    description1="Check that Register CV is now NOT in viewport (top right)"
    method="selenium"
    command1="$selresp = helper_get_element('Register CV');"
    verifytext="get_current_url"
    verifypositive1="inViewport\[0]"
/>

<case
    id="60"
    description1="Check that StepStone Deutschland is now IN viewport (very bottom of page left)"
    method="selenium"
    command1="$selresp = helper_get_element('StepStone Deutschland');"
    verifytext="get_current_url"
    verifypositive1="inViewport\[1]"
/>

</testcases>